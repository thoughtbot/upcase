<h1>Subscriber Engagement Index</h1>

<div class="subscriber_engagement_scores">
  <table id="subscriber_engagement_scores">
    <thead>
      <tr>
        <th>Customer Name</th>
        <th>Customer Email</th>
        <th># Workshops Taken</th>
        <th>Date Of Last Workshop Claim</th>
        <th>Engagement Score</th>
      </tr>
    </thead>

    <tbody>
      <% @subscribers.each do |subscriber| %>
        <tr>
          <td><%= subscriber.name %></td>
          <td><%= subscriber.email %></td>
          <td class="workshops-taken"><%= subscriber.count_of_workshops_taken %></td>
          <td class="last-workshop-taken-date"><%= subscriber.date_of_last_workshop_claim %></td>
          <td class="engagement-score"><%= subscriber.engagement_score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= content_for :javascript do -%>
  <% javascript_tag do %>
    $('table').tablesorter();
  <% end %>
<% end %>
