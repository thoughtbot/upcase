<% content_for :additional_content_classes, "content-narrow" %>

<% content_for :subject_block do %>
  <h1><%= @show.name %></h1>
  <h2 class="tagline">
    Watch or download episodes.
  </h2>
<% end %>

<div class="text-box">
  <span class="divider">
    <h4 class="text">Videos</h4>
  </span>
  <section id="videos">
    <%= render @show.videos_with_status %>
  </section>
</div>
