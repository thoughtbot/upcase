<% content_for :sticky_header_height, "750" %>
<% content_for :additional_body_classes, "the-weekly-iteration" %>

<% render "shared/content_specific_head_tags", content: @show, type: "show" %>

<% content_for :additional_head_content do %>
  <%= auto_discovery_link_tag(:rss, show_url(@show, format: "rss")) %>
<% end %>

<% content_for :subject_block do %>
  <header class="page-header">
    <h1 class="page-header__title">
      <%= @show.name %>
    </h1>
    <h4 class="page-header__tagline">
      Learn to write better code in less than 30 minutes a week.
    </h4>
    <p>
      The Weekly Iteration is our video series where we explore new
      frameworks and languages, dig in to advanced coding patterns, and share
      the techniques we use on projects to build robust and maintainable
      applications.
      We're currently on a break from recording new episodes,
      but be sure to check out the many videos we've released previously.
    </p>
  </header>
<% end %>

<span class="divider">
  <h4 class="text">Videos</h4>
</span>

<section class="videos tiles-container">
  <%= render(
    partial: "videos/video",
    collection: @video_listing.to_a
  ) %>
</section>

<%= paginate @video_listing %>
