<section id="notify-me">
  <h3>Want to be notified the next time we run this workshop?</h3>
  <%= form_for [workshop, FollowUp.new] do |form| %>
    <%= form.text_field :email, placeholder: "Enter your email address" %>
    <input type="submit" value="Submit" />
    <p class="group-training">Interested in group training at your site? <a href="mailto:learn@thoughtbot.com">Contact us</a>.</p>
  <% end %>
</section>
