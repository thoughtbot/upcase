<% content_for :subject_block do %>
  <h1><%= @purchaseable.name %></h1>
  <% if @purchaseable.videos.any? %>
    <h2 class="tagline">Watch or download video lessons, <%= pluralize @purchaseable.published_videos.size, 'lesson' %> in this workshop.</h2>
  <% end %>
<% end %>

<div class="text-box-wrapper">
  <section class="text-box" id="videos">
    <%= render 'workshops/dates', purchaseable: @purchaseable, purchase: @purchase %>
    <%= render 'workshops/videos', purchaseable: @purchaseable, purchase: @purchase %>
  </section>
</div>

<%= render 'workshops/aside', purchaseable: @purchaseable, purchase: @purchase %>
