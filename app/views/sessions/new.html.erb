<div class="top">
  <div class="wrapper">
    <h2>Sign in</h2>
  </div>
</div>
<div id="content">
  <div id="sign_in" class="wrapper">
    <div class="dark-content clearfix">
      <% semantic_form_for :session, :url => session_path do |form| %>
        <% form.inputs do %>
          <%= form.input :email %>
          <%= form.input :password, :as => :password %>
        <% end %>
        <% form.buttons do %>
          <%= form.commit_button "Sign in" %>
        <% end %>
      <% end %>
      <%= link_to "Forgot password?", new_password_path %>
    </div>
  </div>
</div>
