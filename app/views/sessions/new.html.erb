<% content_for :page_header do %>
  <h2>Sign in</h2>
<% end %>

<% semantic_form_for :session, :url => session_path do |form| %>
  <% form.inputs do %>
    <%= form.input :email %>
    <%= form.input :password, :as => :password %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Sign in" %>
  <% end %>
<% end %>
<%= link_to "Forgot password?", new_password_path, :class => 'password' %>
