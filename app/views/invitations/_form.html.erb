<%= semantic_form_for invitation do |form| %>
  <%= form.semantic_errors :team %>
  <%= form.inputs do %>
    <%= form.input(
      :email,
      as: :email,
      placeholder: "Email address",
      hint: render("invitations/additional_charge", team: form.object.team)
    ) %>
    <%= form.submit 'Send invite' %>
  <% end %>
<% end %>
