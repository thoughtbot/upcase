<figure class="screencast product-card <%= 'group' if video.videos.count > 1 %>">
  <%= link_to product_path(video), title: video.name do %>
    <figure>
      <%= image_tag(video.product_image.url) %>
      <span><%= video.tagline %></span>
    </figure>
    <h5>Screencast <%= "(#{video.videos.count} videos)" if video.videos.count > 1 %></h5>
    <h4><%= video.name %></h4>
  <% end %>
</figure>

