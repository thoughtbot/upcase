<section id="learn-header-wrapper">
  <div class="learn-header-container">
    <div class="learn-detail-logo">
      <h1>
        <%= link_to image_tag('learn/learn-ralph-small.png'), root_path %>
        <%= t 'shared.learn' %>
        <span class="learnred"><%= t '.title' %></span>
      </h1>
      <div class="myaccount">
        <% if show_account_links? %>
          <% if signed_in? %>
            <%= link_to 'My account', my_account_path, class: 'button' %>
          <% else %>
            <%= link_to 'Sign in', sign_in_path, class: 'button' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section id="promo-wrapper">
  <% if @courses.present? || @workshops.present? %>
    <div class="products-container learn-text-box">
      <% if @workshops.present? %>
        <h2><%= t 'shared.workshops' %></h2>
        <ul>
          <%= render @workshops %>
        </ul>
      <% end %>
      <% if @courses.present? %>
        <h2><%= t 'shared.courses' %></h2>
        <ul>
          <%= render @courses %>
        </ul>
      <% end %>
    </div>
  <% end %>

  <% if @books.present? %>
    <div class="products-container learn-text-box">
      <h2><%= t 'shared.books' %></h2>
      <ul>
        <%= render @books %>
      </ul>
    </div>
  <% end %>

  <% if @videos.present? %>
    <div class="products-container learn-text-box">
      <h2><%= t 'shared.videos' %></h2>
      <ul>
        <%= render @videos %>
      </ul>
    </div>
  <% end %>
</section>

<%= javascript_include_tag 'retina.js' %>
