<%= link_to repository, title: repository.name do %>
  <li class="repository">
    <div class="repo-name">
      <a><%= repository.name %></a>
      <p class="description"><%= repository.tagline %></p>
    </div>

    <ul class="repo-info">
      <%= raw repository.alternative_description %>
    </ul>
  </li>
<% end %>
