<% if !signed_in? %>
  <p class="trails-save-progress"><%= link_to 'Create an account', sign_up_path(return_to: url_for) %> or <%= link_to 'sign in', sign_in_path(return_to: url_for) %> to save your progess</p>
<% end %>

<section class="all-trail-map-steps">
  <div class="gutter-sizer"></div>
  <%= render partial: 'trails/step', collection: trail.steps, locals: { trail: trail } %>

  <section class='trail-map-steps trail-map-reference'>
    <h2 class="ongoing">Ongoing Reference</h2>
    <ul class="reference">
      <%= render partial: 'trails/reference', collection: trail.reference %>
    </ul>
  </section>
</section>
