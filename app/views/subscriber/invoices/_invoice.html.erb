<tr>
  <td class="number">
    <%= link_to invoice.number, subscriber_invoice_path(invoice.stripe_invoice_id) %>
  </td>
  <td class="date">
    <%= invoice.date.to_s(:short_date) %>
  </td>
  <td class="total">
    <%= number_to_currency invoice.total %>
  </td>
  <td class="balance">
    <%= number_to_currency invoice.balance %>
  </td>
</tr>
