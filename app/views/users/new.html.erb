<section id="auth-form-container">
  <div class="github-signin">
    <%= link_to "Sign up with GitHub", github_auth_path, class: 'button' %>
  </div>
  <div class="thoughtbot-signin">
    <%= semantic_form_for @user do |form| %>
      <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to] %>
      <%= form.inputs do %>
        <%= form.input :name %>
        <%= form.input :email, as: :email, required: true %>
        <%= form.input :password, required: true %>
      <% end %>

      <%= form.actions do %>
        <%= form.action :submit, label: 'Create an account' %>
      <% end %>
    <% end %>
    <ul class="signup-forgot">
      <li>
        <%= link_to "Already have an account? Sign in.", sign_in_path(return_to: params[:return_to]) %>
      </li>
    </ul>
  </div>
</section>
