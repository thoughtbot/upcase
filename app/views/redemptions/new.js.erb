<% if @coupon %>
  $("#total .price").html('<%= number_to_currency @buying.price, :precision => 2 %> (<%= coupon_amount(@coupon) %> off)');
  $(".coupon .error").hide();
  $("#total a").hide();
  $(".coupon").hide();
  $("#coupon_id").val(<%= @coupon.id %>);
  $("fieldset#billing-information").remove();
<% else %>
  $(".coupon .error").show();
<% end %>
