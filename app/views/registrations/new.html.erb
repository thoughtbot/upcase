<section id="container">
<h1 class="course-title">Complete your registration for <span><%= @section.course_name %></span></h1>

  <section id="form-container">
  <section id="form-column">
    <div id="total">
      <p class="price"><%= number_to_currency @registration.price, precision: 0 %></p>
      <p class="coupon-note"><%= link_to "Have a coupon code?", "#" %></p>
    </div>

    <%= render partial: 'redemptions/form' %>

    <%= semantic_form_for @registration, url: section_registrations_path(@section), html: { method: 'post' } do |form| %>
      <%= hidden_field_tag 'coupon_id' %>
      <% if signed_out? %>
        <div class="workshop-sign-in">Already have an account? <%= link_to 'Sign in.', sign_in_path(return_to: request.fullpath) %></div>
      <% end %>
      <%= form.inputs 'Your information' do %>
        <%= form.input :first_name %>
        <%= form.input :last_name %>
        <%= form.input :email %>
        <%= form.input :comments, hint: "Please let us know if you have any dietary restrictions or any other comments" %>
      <% end %>

      <%= form.inputs 'For your receipt' do %>
        <%= form.input :billing_email, required: false, hint: "The receipt will be sent to this address." %>
        <%= form.input :organization, required: false %>
        <%= form.input :phone %>
        <%= form.input :address1, label: 'Address 1' %>
        <%= form.input :address2, label: 'Address 2' %>
        <%= form.input :city %>
        <%= form.input :state %>
        <%= form.input :zip_code %>
      <% end %>

      <%= form.actions do %>
        <%= form.action :submit, label: 'Proceed to checkout' %>
      <% end %>
    <% end %>
  </section>

  <section id="form-sidebar">
      <h4 class="terms">Terms and conditions</h4>
      <p>By registering for this workshop you agree to the following terms and conditions:</p>
      <ul>
        <li>If you&rsquo;re not happy with a workshop you took, just let us know and we&rsquo;ll refund your money. It&rsquo;s as simple as that.</li>
        <li>The ticket will entitle the named holder entrance to this event.</li>
        <li>Tickets may not be resold and are non-transferrable.</li>
        <li>Tickets are refundable up until 1 week before the start of the workshop.</li>
        <li>We may film, take photographs, and use your feedback for marketing purposes.</li>
        <li>thoughtbot, inc. will not be liable for any direct or indirect damage of any nature arising out of the cancellation of the event.</li>
      </ul>
    </section>
  </section>
</section>

<% content_for :javascript do -%>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $('#new_registration').submit(function(){
        var email = $('#registration_email').val();
        _kmq.push(['identify', email]);
      });
    });
  <% end %>
<% end %>
