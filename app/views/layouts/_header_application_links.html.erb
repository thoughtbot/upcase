    <li>
      <%= link_to(
        t("shared.header.flashcards"),
        decks_path,
        class: "site-nav__link",
      ) %>
    </li>

    <li class="discuss">
      <%= link_to(
        t("shared.header.forum"),
        Forum.url,
        class: "site-nav__link",
      ) %>
    </li>

    <li>
      <%= link_to(
        t("shared.header.search"),
        search_path,
        class: "site-nav__link",
      ) %>
    </li>

    <li>
      <%= link_to(
        t("shared.header.about_us"),
        about_us_path,
        class: "site-nav__link",
      ) %>
    </li>

    <li>
      <%= link_to(
        t("shared.header.hire_us"),
        "https://thoughtbot.com/services/custom-training-learning-course-upcase",
        class: "site-nav__link site-nav__link_cta",
      ) %>
