<div class="site-nav__menu">
  <ul>
    <li>
      <%= link_to(
        "Weekly Videos",
        Show.the_weekly_iteration,
        class: "site-nav__link",
      ) %>
    </li>

    <li>
      <%= link_to(
        "Forum",
        "https://forum.upcase.com",
        class: "site-nav__link",
        target: "_blank",
      ) %>
    </li>

    <li>
      <%= link_to(
        t("shared.header.content"),
        "#",
        class: "table-of-contents-toggle site-nav__link",
        data: { role: "table-of-contents-toggle" }
      ) %>
    </li>

    <% unless team_page? %>
      <li>
        <%= link_to(
          t("shared.header.teams"),
          teams_path,
          class: "site-nav__link",
        ) %>
      </li>
    <% end %>

    <% if signed_out? && not_on_signin_path? %>
      <li>
        <% if landing_page? %>
          <%= link_to(
            t("shared.header.sign_in"),
            sign_in_path,
            class: "site-nav__link",
          ) %>
        <% else %>
          <%= link_to(
            t("shared.header.sign_in"),
            sign_in_path_with_current_path_return_to,
            class: "site-nav__link",
          ) %>
        <% end %>
      </li>
    <% end %>

    <li id="site_nav_call_to_action">
      <% if team_page? %>
        <%= link_to(
            t("subscriptions.team_join_cta"),
            team_checkout_path,
            class: "site-nav__button"
          ) %>
      <% else %>
        <%= link_to(
          t("shared.subscriptions.single_user"),
          professional_checkout_path,
          class: "js-site-nav-button site-nav__button"
        ) %>
      <% end %>
    </li>
  </ul>
</div>

<%= render "shared/table_of_contents" %>
