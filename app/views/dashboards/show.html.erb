<section class="workshops vertical-slider">
  <figure class="meta product-card">
    <%= render 'mentor' %>
    <%= render 'trails' %>
  </figure>
  <%= render partial: 'products/workshop', collection: online_workshops %>
  <%= render partial: 'products/workshop', collection: in_person_workshops %>
  <a class="nav show-all">all workshops</a>
</section>

<section class="screencasts vertical-slider">
  <%= render partial: 'products/video', collection: videos %>
  <a class="nav show-all">all screencasts</a>
</section>

<section class="forum">
  <p class="forum-desc">Ask questions about any piece of content, get answers from us, collaborate with other members.</p>
  <%= link_to forum_url do %>
    View the <%= t('shared.subscription.name') %> forum <span>&#x27f6;</span>
  <% end %>
</section>

<section class="reading">
  <section class="list bytes">
    <header>
      <h2>Recommended Reading &mdash; <%= t('shared.bytes') %></h2>
    </header>
    <%= render partial: 'articles/byte', collection: bytes.first(3) %>
    <%= link_to "View all #{t('shared.bytes')}", bytes_path, class: 'bytes-index' %>
  </section>
  <section class="list books">
    <header>
      <h2>Library</h2>
    </header>
    <%= render partial: 'products/book', collection: books %>
  </section>
</section>
