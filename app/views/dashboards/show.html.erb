<%= render 'mentor_info' %>

<section class='resources vertical-slider revealed'>
  <%= render 'learn_repo' %>
  <%= render 'learn_live' %>
  <%= render 'forum' %>
  <%= render 'trails' %>
</section>

<% if current_user_has_access_to_workshops? %>
  <section class='workshops vertical-slider revealed'>
    <%= render partial: 'products/workshop', collection: @catalog.workshops %>
  </section>
<% else %>
  <section class='workshops vertical-slider revealed disabled'>
    <div class='disabled-text'>
      <h2>
        <% if current_user_has_access_to_shows? %>
          <%= t(
            '.no_workshops.title_html',
            link: link_to(t('.no_workshops.link'), edit_subscription_path)
          ) %>
        <% else %>
          <%= t(
            '.no_shows.title_html',
            link: link_to(t('.no_shows.link'), edit_subscription_path)
          ) %>
        <% end %>
      </h2>
    <%= link_to "See what you're missing", products_path %>
    </div>
  </section>
<% end %>

<% if current_user_has_access_to_shows? %>
  <section class='shows vertical-slider revealed'>
    <%= render @catalog.shows %>
  </section>
<% end %>

<section class='screencasts vertical-slider revealed'>
  <%= render @catalog.screencasts %>
</section>

<%= render 'exercises' %>

<section class='reading vertical-slider revealed'>
  <%= render @catalog.books %>
</section>
