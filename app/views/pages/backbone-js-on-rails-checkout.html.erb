<section id="container">

  <section id="checkout-form">
    <h1>Purchase Backbone.js on Rails</h1>
    <%= render :partial => 'shared/backbone_checkout_intro' %>

    <%= semantic_form_for :cart, :url => "https://thoughtbot.myshopify.com/cart/add", :html => { :id => "backbone_form", :method => 'post' } do |form| %>
      <%= hidden_field_tag 'id', '198224892' %>
      <%= hidden_field_tag 'return_to', "https://thoughtbot.myshopify.com/checkout" %>
      <%= form.inputs 'GitHub Username' do %>
        <li>Enter the <strong>GitHub usernames</strong> of everyone you'd like to purchase access for. You can add more names later.  If you don't have a Github account, you can <a href="https://github.com/signup/free">create one for free here</a>.</li>
        <li class="string required">
          <label for="first_reader">First Reader<abbr title="required">*</abbr></label>
          <input type="text" name="attributes[first-reader]" id="first_reader" required="required" class="reader"/>
          <p class="inline-hints">Be sure to enter a valid GitHub username.</p>
        </li>
      <% end %>
      <%= form.buttons do %>
        <%= form.commit_button "Proceed to Checkout" %>
      <% end %>
    <% end %>

  </section>
</section>


<%= render :partial => "shared/github_check" %>
