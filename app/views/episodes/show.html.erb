<% content_for :subject, t('shared.podcast') %>

<%= render 'introduction', show: @episode.show %>

<div class="text-box-wrapper">
  <div class="text-box">
    <hgroup class="product-title">
      <h2>Episode #<%= @episode.id %></h1>
      <h3><%= @episode.title %></h2>
    </hgroup>

    <p><%= @episode.description %></p>

    <div class="listen">
      <audio preload="none" controls="controls">
        <%= tag :source,
          src: show_episode_path(@episode.show, @episode, format: :mp3),
          type: 'audio/mpeg' %>
      </audio>
      <%= link_to show_episode_path(@episode.show, @episode, format: :mp3) do %>
        Direct Download
      <% end %>
      (<%= number_to_human_size @episode.file_size, precision: 2 %>,
      <%= distance_of_time_in_words @episode.duration %>)
    </div>

    <% unless @episode.notes.blank? %>
      <h3>Notes &amp; Links</h3>
      <p class="notes">
      <%== format_podcast_notes @episode.notes %>
      </p>
    <% end %>

    <section id="podcast-questions">
      <h3>To have your questions answered on the air</h3>
      <p>
        Email your questions to <%= mail_to @episode.show.email %> or Tweet to
        us <a href="http://twitter.com/thoughtbot">@thoughtbot</a>.
      </p>
    </section>
  </div>

  <%= render 'credits', show: @episode.show %>
</div>

<%= render @episode.related %>
