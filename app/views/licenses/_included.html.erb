<%= link_to(
  [product, :licenses],
  class: "license-button button free-with-prime",
  id: "#{product.sku}-purchase-individual",
  method: :post
) do %>
  <% if product.collection? %>
    <%= t "#{product.offering_type}.checkout_cta_for_collection" %>
  <% else %>
    <%= t "#{product.offering_type}.checkout_cta" %>
  <% end %>
<% end %>
