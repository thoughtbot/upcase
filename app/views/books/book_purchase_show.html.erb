<% content_for :subject_block do %>
  <h1><%= @purchaseable.name %></h1>
<% end %>

<div class="text-box-wrapper">
  <div class="text-box">
    <%= render 'licenses/downloads_info', offering: @purchaseable %>
    <%= render 'licenses/github_repo_info', offering: @purchaseable %>

    <figure class="book-cover">
      <%= image_tag(cover_image(@purchaseable)) %>
    </figure>
  </div>
</div>

<%= render 'books/aside', offering: @purchaseable, purchase: @purchase %>
