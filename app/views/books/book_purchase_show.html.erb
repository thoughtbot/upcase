<% content_for :subject_block do %>
  <h1><%= @purchaseable.name %></h1>
<% end %>

<div class="text-box-wrapper">
  <div class="text-box">
    <%= render 'purchases/downloads_info', purchaseable: @purchaseable %>
    <%= render 'purchases/github_repo_info', purchaseable: @purchaseable %>

    <figure class="book-cover">
      <%= image_tag(cover_image(@purchaseable)) %>
    </figure>
  </div>
</div>

<%= render 'books/aside', purchaseable: @purchaseable, purchase: @purchase %>
