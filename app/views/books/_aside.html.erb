<aside>
  <% if offering.github_url? %>
    <section class="start-reading">
      <h3>Start reading</h3>
      <hr />
      <%= link_to epub_url(offering), class: 'button' do %>
        Download as EPUB<br/>
        (iPhone, iPad &amp; Nook)
      <% end %>
      <%= link_to 'Download for Kindle', kindle_url(offering), class: 'button' %>
      <%= link_to 'Download as PDF', pdf_url(offering), class: 'button' %>
      <%= link_to 'See all formats on GitHub &rarr;'.html_safe, book_releases_url(offering), class: 'view-github' %>
    </section>
  <% end %>

  <%= render 'shared/sidebar_forum', offering: offering %>
</aside>
