<% content_for :nav do -%>
  <ul>
    <li><%= link_to "Courses", courses_path %></li>
    <li class="raquo">&raquo;</li>
    <li><%= link_to @course.name, edit_course_path(@course) %></li>
  </ul>
<% end -%>

<% semantic_form_for @course do |form| %>
  <%= render :partial => 'fields', :locals => { :form => form } %>
  <% form.buttons do -%>
    <%= form.commit_button 'Save Course' %>
  <% end -%>
<% end %>
