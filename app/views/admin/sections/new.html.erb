<%= semantic_form_for [:admin, @course, @section] do |form| %>
  <%= @section.errors.full_messages.join(', ') %>
  <%= render partial: 'inputs',
             locals: { form: form,
                           course: @course,
                           teachers: @teachers } %>

  <%= form.actions do %>
    <%= form.action :submit, label: 'Save Section' %>
  <% end %>
<% end %>
