<% semantic_form_for [:admin, @course, @section] do |form| %>
  <%= render :partial => 'inputs',
             :locals  => { :form     => form,
                           :course   => @course,
                           :teachers => @teachers } %>

  <div id="admin-section-right">
    <div id="seats-available" class="clearfix">
      <label>
        <input type="text" value="12" />
        Seats Available
      </label>
    </div>
    <div id="student-list" class="cool-list">
      <h3>
        <%= pluralize @section.students.size, "Student" %>
        <%= link_to 'Add Student', new_admin_section_registration_path(@section), :id => 'add-student' %>
      </h3>
      <ul>
        <% @section.registrations.each do |registration| %>
          <% content_tag_for :li, registration do %>
            <%= link_to h(registration.user.name), registration.freshbooks_invoice_url, :title => "View invoice" %>
            [<%= mail_to registration.user.email, 'email', :title => "Email" %>]
            <%= link_to "X", admin_section_registration_path(@section, registration), :method => :delete, :confirm => "Are you sure want to delete the registration for this student?", :class => "remove-teacher", :title => "Delete" %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <% form.buttons do %>
    <%= form.commit_button 'Save Section' %>
  <% end %>
<% end %>
