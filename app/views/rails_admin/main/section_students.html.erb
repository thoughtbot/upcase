<h3>
  <%= pluralize @section.paid_purchases.size, 'Student' %>
</h3>
<p>
  <%= mail_to(
    'learn@thoughtbot.com',
    'Email all paid students',
    subject: @section.name,
    bcc: @section.paid_purchases.map(&:email).join(',')
  ) %>
</p>
<ul id="paid">
  <%= render @section.paid_purchases %>
</ul>

<h3>Pending Payment</h3>
<ul id="unpaid">
  <%= render @section.unpaid_purchases %>
</ul>
