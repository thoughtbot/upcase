<ul>
  <li>
    <%= link_to new_path(:section, section: {workshop_id: workshop.id}) do %>
      <i class='icon-plus-sign'></i> Add new section
    <% end %>
  </li>
  <% sections.each do |section| %>
    <%= content_tag_for(:li, section) do %>
      <%= link_to section.date_range, edit_path(:section, section) %>
    <% end %>
  <% end %>
</ul>
