<div class='trail-map-steps'>
  <% trail_map['steps'].each do |step| %>
    <h2><%= step['name'] %></h2>
    <% if step['resources'].present? %>
      <h3>Resources:</h3>
      <ul>
        <% step['resources'].each do |resource| %>
          <li>
            <%= link_to_if(resource['url'].present?, resource['name'], resource['url']) %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <% if step['validations'].present? %>
      <h3>You should be able to:</h3>
      <ul>
        <% step['validations'].each do |validation| %>
          <li>
            <% if validation.is_a? Hash %>
              <%= link_to_if(resource['url'].present?, resource['name'], resource['url']) %>
            <% else %>
              <%= validation %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
