<div class="trail-category">
  <%= link_to topic_path(topic) do %>
    <section class="trail-info">
      <h2>Learn <%= topic.name %></h2>
      <% if topic.summary? %>
        <p><em><%= topic.summary %></em></p>
      <% end %>
    </section>
    <% if topic.trail %>
      <%= render 'trails/progress', trail: topic.trail %>
    <% end %>
  <% end %>
</div>
