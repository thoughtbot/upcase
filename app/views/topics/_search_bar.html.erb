<div class="search-bar">
  <input type="text" autocomplete="off" id="search_input" placeholder="What do you want to learn?" value="<%= @topic.name if @topic %>" />
  <%= link_to image_tag("icons/search.png"), "#", class: "search", style: "#{'display: none' if @topic}" %>
  <%= link_to image_tag("icons/clear_search.png"), root_url, class: "clear-search", style: "#{'display: inline' if @topic}" %>
  <div class="spinner"></div>
</div>
