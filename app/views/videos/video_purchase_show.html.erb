<% content_for :subject, @purchaseable.name %>

<h2>Watch or Download Video</h2>

<% unless single_video?(@purchaseable) %>
  <h3 class="workshop-type"><%= pluralize @purchaseable.videos.size, 'video' %> in the series</h3>
<% end %>

<div class="text-box-wrapper">
  <% if single_video?(@purchaseable) %>
    <%= render 'videos/watch_video', video: @purchaseable.videos.first, purchaseable: @purchaseable %>
  <% else %>
    <section id="videos">
      <%= render @purchaseable.videos.ordered, purchase: @purchase %>
    </section>
  <% end %>
</div>

<%= render 'videos/aside', purchaseable: @purchaseable, purchase: @purchase %>
