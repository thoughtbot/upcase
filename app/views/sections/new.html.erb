<% semantic_form_for [@course, @section] do |form| %>
  <%= form.semantic_errors %>
  <% form.inputs do %>
    <%= form.input :starts_on, :as => :text %>
    <%= form.input :ends_on, :as => :text %>

    <%= link_to 'Create New Teacher', new_course_teacher_path(@course), :id => 'new-teacher' %>
    <% form.semantic_fields_for :section_teachers do |section_teacher| %>
      <%= section_teacher.input :teacher_id, :collection => @teachers, :as => :check_boxes, :label_method => teacher_label %>
    <% end %>

  <% end %>

  <% form.buttons do %>
    <%= form.commit_button 'Save Section' %>
  <% end %>

<% end %>
