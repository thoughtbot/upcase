<% unless online_section.starts_immediately? %>
  <section class="section-location">
    <div class="when">
      <h3>When</h3>
      <p>
        <%= formatted_date_range(online_section.starts_on, online_section.ends_on) %><br>
        <%= online_section.time_range %>
      </p>
    </div>
  </section>
<% end %>

<section id="license">
  <% if online_section.full? %>
    <h2>
      <span>Sold Out</span>
    </h2>
    <a href="#new_follow_up" class="button">Get notified</a>
  <% else %>
    <div class="individual-purchase">
      <h2>
        <% unless current_user_has_active_subscription? %>
          Single
        <% end %>
        <span>
          <% unless current_user_has_active_subscription? %>
            <%= number_to_currency online_section.individual_price, precision: 0 %>
          <% end %>
        </span>
      </h2>

      <div class="license">
        <% if current_user_has_active_subscription? %>
          <h2 class="active-subscription"><%= t 'workshops.show.free_to_subscribers' %></h2>
          <%= link_to new_section_purchase_path(online_section, variant: :individual), class: "free-with-prime license-button button" do %>
            <%= t('workshops.show.register_free') %>
          <% end %>
        <% else %>
          <%= link_to new_section_purchase_path(online_section, variant: :individual), class: "license-button button" do %>
            <%= t('workshops.show.register') %>
          <% end %>
        <% end %>
      </div>
    </div>

    <% unless current_user_has_active_subscription? %>
      <div class="company-purchase">
        <h2>
          Group
          <span><%= number_to_currency online_section.company_price, precision: 0 %></span>
        </h2>

        <div class="license">
          <%= link_to new_section_purchase_path(online_section, variant: :company), class: 'license-button button' do %>
            Purchase for Your Company
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</section>
