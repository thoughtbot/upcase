<section class="section-location">
  <% if in_person_section.full? %>
    <h2><%= in_person_section.city %> <span>Sold Out</span></h2>
  <% else %>
    <h2>
      <%= in_person_section.city %>
      <span>
        <% unless current_user_has_active_subscription? %>
          <% if pricing_scheme == "primary" %>
            <%= number_to_currency in_person_section.individual_price, precision: 0 %>
          <% else %>
            <%= number_to_currency in_person_section.alternate_individual_price, precision: 0 %>
          <% end %>
        <% end %>
      </span>
    </h2>
  <% end %>

  <div class="when">
    <h3>When</h3>
    <p><%= in_person_section.date_range %><br><%= in_person_section.time_range %></p>
  </div>

  <div class="address">
    <h3>Where</h3>
    <p>
      <%= google_map_link_to(in_person_section.location, id: 'location') do %>
        <%= in_person_section.address %><br>
        <%= in_person_section.city %>, <%= in_person_section.state %> <%= in_person_section.zip %>
      <% end %>
    </p>
  </div>

  <div id="register">
    <% if current_user_has_active_subscription? %>
      <h2 class="active-subscription"><%= t 'workshops.show.free_to_subscribers' %></h2>
    <% end %>
    <% if in_person_section.full? %>
      <a href="#new_follow_up" class="button">Get notified</a>
    <% else %>
      <%= link_to registration_url(in_person_section), class: 'button' do %>
        <%= t('workshops.show.register') %>
      <% end %>
    <% end %>
  </div>
</section>
