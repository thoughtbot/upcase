<% if workshop.online? %>
  <%= render partial: 'sections/online_section',
    collection: sections,
    locals: { pricing_scheme: pricing_scheme } %>
<% else %>
  <%= render partial: 'sections/in_person_section',
    collection: sections,
    locals: { pricing_scheme: pricing_scheme } %>
  <p class="travel">
    <%= link_to "Have us book your travel and hotel.", 'mailto:workshops@thoughtbot.com?subject=Booking travel for workshop' %>
  </p>
<% end %>
