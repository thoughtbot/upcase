<% content_for :page_header do %>
  <div id="sub-header" class="clearfix">
    <h2 id="main-headline"><%= t(".headline", :default => "Kickstart your career") %></h2>
    <h3>
      <%= t(".teaser", :default => "We've worked on more than 50 Ruby on Rails apps. We share what we've learned in our workshops, where we've trained hundreds of designers and developers from Harvard University, The New York Times, Raytheon, Mitre and more.") %>
    </h3>

    <% if @unscheduled_courses.empty? && @sections.empty? %>
      <p id="no-courses">No courses are running at this time.</p>
    <% else %>
      <ul id="list-of-classes">
        <% @sections.each do |section| %>
          <li><% link_to section_path(section), :id => dom_id(section) do %>
              <h4><%=h section.course_name %></h4>
              <div>
                <%=h section.date_range %>
              </div>
            <% end %>
          </li>
        <% end %>
        <% @unscheduled_courses.each do |course| %>
          <li class='inactive'><% link_to course_path(course), :id => dom_id(course) do %>
              <h4><%=h course.name %></h4>
              <div>Tell Me More</div>
            <% end %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>

