<% content_for :page_header do %>
  <section id="homepage-top">
    <header>
      <h1>thoughtbot workshops</h1>

      <section id="the-sell">
        <h2>Kickstart your <br>career with us</h2>
        <p class="tagline">We&rsquo;ve trained hundred of people in small, <br>hands-on workshops led by our passionate experts.</p>
      </section>
    </header>

    <section id="workshop-list">
      <% if @unscheduled_courses.empty? && @sections.empty? %>
        <p id="no-courses">No courses are running at this time.</p>
      <% else %>
        <ul>
          <% @sections.each do |section| %>
            <li>
              <% link_to section_path(section), :id => dom_id(section) do %>
                <h3><%=h section.course_name %></h3>
                <p class="teaser">Android is catching on like wildfire. We teach the fundamentals of Android development.</p>
                <p class="date"><%=h section.date_range %></p>
              <% end %>
            </li>
          <% end %>
          <% @unscheduled_courses.each do |course| %>
            <li class="inactive">
              <% link_to course_path(course), :id => dom_id(course) do %>
                <h3><%=h course.name %></h3>
                <p class="date">Tell Me More</p>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </section>
  </section>
<% end %>

