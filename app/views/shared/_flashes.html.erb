<% if flash.any? %>
  <div class="flashes">
    <% (flash.keys & [:success, :info, :notice, :error]).each do |key| -%>
      <div class="flash <%= key %>">
        <%= flash[key] %>
      </div>
    <% end -%>

   <% if flash[:purchase_paid_price] %>
     <%= adwords_conversion_tracker(flash[:purchase_paid_price]) %>
   <% end %>
  </div>
<% end %>
