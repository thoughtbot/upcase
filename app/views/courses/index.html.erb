<div class="top">
  <div class="wrapper">
    <h2>Admin</h2>
  </div>
</div>
<div id="content" class="admin">
  <div class="wrapper">
    <div id="admin-nav" class="clearfix">
      <ul>
        <!-- no breadcrumbs on Courses list page -->
        <li><span>Courses</span></li>
      </ul>
      <%= link_to 'New Course', new_course_path, :id => 'new-course' %>
    </div>
    <div class="dark-content">
      <% @courses.each do |course| %>
        <% div_for(course, :class => 'course-list cool-list') do %>
          <h3>
            <%= link_to h(course.name), '#'%>
            <%= link_to 'New Section', new_course_section_path(course), :class => 'new-section', :id => "new-section-#{course.id}" %>
          </h3>
          <ul>
            <% course.sections.each do |section| %>
              <li><%= link_to section.date_range, edit_course_section_path(course, section), :id => dom_id(section) %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
