  <section id="head-wrapper">
    <section id="homepage-top">
      <h1><%= @course.name %></h1>
      <section id="workshop-details">
        <p class="cost">Cost: <%= number_to_currency @course.price, precision: 0 %></p>
        <section id="register">
          <a href="#new_follow_up" id="register-button">Get notified</a>
        </section>
        <h3>Where</h3>
        <p id="section-location">
          <%= google_map_link_to("#{@course.location} #{@course.location_name}", id: 'location') do %>
            <%= @course.location %> <br> <%= @course.location_name %>
          <% end %>
        </p>
      </section>

      <section id="course-info">
        <section id="course-description"><%=raw textilize @course.description %></section>
        <%= render partial: 'questions', locals: { course: @course } %>
      </section>

    </section>
  </section>

<section id="additional-information">
  <section id="additional-information-wrapper">
    <section id="main-content">
      <%= render partial: 'follow_up', locals: { course: @course } %>
    </section>
  </section>
</section>
