<% content_for :additional_content_classes, 'fullscreen' %>

<% content_for :subject_block do %>
  <h1><%= @purchaseable.name %></h1>
  <h2 class="tagline">
    <% if @purchaseable.collection? %>
      Watch or download videos,
      <%= pluralize @purchaseable.published_videos.size, 'video' %> in the series.
    <% else %>
      Watch or download video
    <% end %>
  </h2>
<% end %>

<% if @purchaseable.collection? %>
  <div class="text-box-wrapper">
    <div class="text-box">
      <section id="videos">
        <%= render @purchaseable.published_videos.ordered, purchase: @purchase %>
      </section>
    </div>
  </div>
<% else %>
  <%= render 'videos/watch_video', video: @purchaseable.published_videos.first, purchase: @purchase %>
<% end %>

<%= render 'screencasts/aside', purchaseable: @purchaseable, purchase: @purchase %>
