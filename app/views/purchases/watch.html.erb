<section id="head-wrapper">
  <section id="homepage-top">
    <h1>Watch or Download Video</h1>
    <h2>
      <%= @product.name %>
      <% if @product.videos.size > 1 %>
        <span> <%= @product.videos.size %> videos in the series </span>
      <% end %>
    </h2>

    <% if @product.videos.size == 1 %>
      <%= render @product.videos.first %>
    <% else %>
      <ol class="videos">
        <% @product.videos.each do |video| %>
          <li>
            <%= link_to product_purchase_video_path(@product, @purchase, video) do %>
              <img src="<%= video.wistia_thumbnail %>" width="100" height="60"
                alt="<%= video.title %>" />
              <span><%= video.title %></span>
              <time><%= video.wistia_running_time %><time>
            <% end %>
          </li>
        <% end %>
      </ol>
    <% end %>
    <h2>More from thoughtbot</h2>

    <section id="purchase-products">
      <% Product.active.each_with_index do |product, index| %>
        <% if product != @product %>
          <aside class="purchase-product">
            <h3><%= link_to product.name, product_path(product, utm_source: "oss") %></h3>
            <p><%= product.short_description %></p>
          </aside>
        <% end %>
      <% end %>
    </section>
  </section>
</section>
<div id="flash"></div>

