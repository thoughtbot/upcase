<section id="learn-header-wrapper">
  <div class="learn-header-container">
    <div class="learn-detail-logo">
      <h1>
        <%= link_to image_tag('learn/learn-ralph-small.png'), root_path %>
        <%= t 'shared.learn' %>
        <span class="learnred"><%= @product.name %></span>
      </h1>
    </div>
  </div>
</section>

<section id="promo-wrapper">
    <h3 class="video-headline">Watch or Download Video</h3>
    <h2 class="video-headline">
      <% if @product.videos.size > 1 %>
        <%= @product.videos.size %> videos in the series
      <% end %>
    </h2>

    <% if @product.videos.size == 1 %>
      <%= render @product.videos.first %>
</section>
    <% else %>
    </section>
<section id="learn-topics-list">

        <% @product.videos.each do |video| %>
        <div class="learn-text-box">
            <%= link_to product_purchase_video_path(@product, @purchase, video) do %>
              <img src="<%= video.wistia_thumbnail %>" width="100" height="60"
                alt="<%= video.title %>" />
             <p class="videoinfo"> <%= video.title %>
              <%= video.wistia_running_time %></p>
            <% end %>
          </div>
        <% end %>
    <% end %>
</section>

