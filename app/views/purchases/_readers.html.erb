<% if purchase.product.fulfillment_method == "github" %>
  <%= form.inputs 'GitHub Usernames' do %>
    <li>
      <label for="reader_1">1st Reader<abbr title="required">*</abbr></label>
      <input type="text" name="purchase[readers][]" class="reader" required="required"/>
      <p class="inline-hints">Be sure to enter a valid GitHub username.</p>
    </li>
    <% if purchase.variant == "company" %>
      <li>Enter the <strong>GitHub usernames</strong> of up to 9 additional readers. You can add more names later by emailing <%= mail_to "workshops@thoughtbot.com", "workshops@thoughtbot.com" %>.</li>
      <% (2...11).each do |reader| %>
        <li>
          <label for="reader_<%= reader %>"><%= reader.ordinalize %> Reader</label>
          <input type="text" name="purchase[readers][]" class="reader"/>
        </li>
      <% end %>
    <% end %>
  <% end %>
  <%= render :partial => "shared/github_check" %>
<% end %>
