<section id="auth-form-container">
  <div class="thoughtbot-signin">
    <%= semantic_form_for(
      @acceptance,
      url: teams_invitation_acceptances_path(@acceptance.invitation)
    ) do |form| %>
      <%= form.semantic_errors :invitation %>
      <%= form.inputs do %>
        <%= form.input :name %>
        <%= form.input :github_username %>
        <%= form.input :password %>
        <%= form.submit 'Create an account' %>
      <% end %>
    <% end %>
  </div>
</section>
