.product-card {
  background: #fff;
  border-bottom: 2px solid rgb(200, 200, 200);
  border-radius: .3rem;
  box-shadow: 0 4px 8px rgba(0, 0, 0, .05);
  display: inline-block;
  height: 330px;
  padding: 5px;
  position: relative;
  width: $product-card-width;

  &.workshop:hover {
    .hover-text {
      @include transform(translate3D(0, 0, 0));
    }

    .hover-text + img, .hover-text + .inperson-date {
      @include transform(translate3D(110%, 0, 0));
    }
  }

  &.in-progress, &.registered, &.complete, {
    h5 {
      display: none;
    }
  }

  &.in-progress .status, &.registered .status {
    background: rgba(255, 255, 0, .4);
    color: $darkwarmgray;
    display: block;
  }

  &.complete .status {
    background: url(<%= asset_path 'check.svg' %>) no-repeat 5px 5px #83EBA8;
    background-size: 18px;
    color: darken(#83EBA8, 45%);
    display: block;
    text-indent: 18px;
  }

  &.thumbnail {
    background: none;
    border: 0;
    box-shadow: none;
    height: auto;
    padding: 0;

    &:hover figure span {
      opacity: 1;
      @include transform(scale(1));
    }

    &.group:after, &.group:before {
      background: #eee;
      border-radius: 3px;
      box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.17);
      content: '';
      display: block;
      height: 50px;
      @include position(absolute, -.4em 0 0 5%);
      width: 90%;
      z-index: 1;
    }

    &.group:before {
      left: 10%;
      top: -.75em;
      width: 80%;
    }

    &.group figure {
      box-shadow: 0 4px 8px rgba(0, 0, 0, .1), 0 -12px 0 -11px rgba(0, 0, 0, .17);
    }

    h5 {
      margin-bottom: .15rem;
    }

    h4 {
      color: $darkwarmgray;
      margin: 0;
      padding-bottom: 0;
      padding-top: 0;
    }

    figure {
      border-radius: 3px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, .1);
      line-height: 0;
      overflow: hidden;
      position: relative;
      z-index: 2;

      span {
        border-radius: 3px;
        box-shadow: inset 0 0 300px rgba(0, 0, 0, 1);
        color: #fff;
        font: 400 1rem/1.4em $serif;
        opacity: 0;
        padding: .8rem 1rem;
        @include position(absolute, 0px 0px 0px 0px);
        @include transform(scale(.95));
        @include transition(.1s);
        @include user-select(none);
        z-index: 1;
      }
    }

    .console-illustration {
      background: #111;
      color: #ddd;
      font: bold 3rem/1 monospace;
      height: 124px;
      margin: 0;
      padding: .5rem 1rem;
    }
  }

  &.book {
    border: 1px solid rgb(200, 200, 200);
    display: inline-block;
    height: auto;
    line-height: 0;
    padding: 0;
    position: relative;
    width: $product-card-width;
  }

  &.dashboard-resource {
    border-top: 5px solid $green;
    height: 165px;

    h4 {
      color: $darkwarmgray;
      padding-bottom: 0;

      img {
        float: right;
      }
    }

    p {
      margin-top: 0;
    }

    &.trails {
      background: url(<%= asset_path 'learn/trails-graphic.svg' %>) #fff no-repeat 3rem .8rem;
      background-size: 75%;
    }
  }

  > a {
    display: block;
    height: 100%;
    line-height: 0;
    overflow: hidden;
    position: relative;
  }

  h4 {
    border-radius: 2px;
    color: #fff;
    margin-bottom: .3rem;
    padding: .75rem .6rem;
    font-weight: 700;
  }

  &.workshop h4 {
    background: $workshop-color;
  }

  &.mentor h4 {
    background: $mentor-color;
  }

  .hover-text {
    background: rgb(240, 240, 240);
    color: #606060;
    display: block;
    font: 400 1rem/120px $serif;
    height: 120px;
    @include position(absolute, 0 0px 0 0px);
    text-align: center;
    text-align: center;
    text-transform: uppercase;
    @include transform(translate3D(-110%, 0, 0));
    @include transition(.3s $ease-out-quart);
  }

  img {
    @include transition(.3s $ease-out-quart);
  }

  h5, p {
    margin: .6rem;
  }

  h5 {
    color: rgb(175, 175, 175);
    font-size: .8rem;
    text-transform: uppercase;
  }

  .status {
    display: none;
    line-height: 1.2em;
    margin: .3rem 0;
    padding: .3rem .6rem;
  }

  .inperson-date {
    background: rgb(220, 220, 220);
    height: 120px;
    padding: 1.4rem .5rem;
    text-align: center;
    @include transition(.3s $ease-out-quart);

    section {
      margin: .25rem;
    }

    .upcoming {
      border-bottom: 2px solid #999;
      display: inline-block;
      margin-bottom: .4rem;
    }

    span {
      color: #606060;
      font-size: 1rem;
      font-weight: 400;
      line-height: 1.2em;
      text-align: left;
      text-transform: uppercase;
    }
  }

  .note {
    bottom: 0;
    font: normal .8rem/1em $sans-serif;
    position: absolute;
  }

  .notification {
    background: rgb(255, 252, 187);
    border: 1px solid rgb(240, 218, 132);
    border-bottom-width: 2px;
    border-radius: 3px;
    color: $darkwarmgray;
    font: 600 .8rem/1.2em $sans-serif;
    padding: .5rem 1rem;
    @include position(absolute, -3rem 0 0 12.5%);
    text-align: center;
    text-transform: uppercase;
    width: 75%;

    // nub
    &:after {
      background: rgb(255, 252, 187);
      border: 1px solid rgb(240, 218, 132);
      border-width: 0 2px 2px 0;
      content: '';
      display: block;
      height: 10px;
      margin-left: -7px;
      @include position(absolute, 0 0 -7px 50%);
      @include transform(rotate(45deg));
      width: 10px;
    }
  }
}

.card-slider {
  margin: 0 auto $product-card-margin;
  overflow: hidden;
  padding: $product-card-margin $slide-button-width 0;
  position: relative;
  @include product-card-widths(7, max-width, ($slide-button-width * 2));
  white-space: nowrap;

  @include dashboard-small {
    overflow-x: scroll;
    padding: $product-card-margin $product-card-margin .75rem;
    -webkit-overflow-scrolling: touch;
  }

  &.screencasts {
    background-color: #fff;
    margin-bottom: $product-card-margin;
    margin-top: 0;
    padding-bottom: $product-card-margin;
    padding-top: $product-card-margin + .5rem;

    .nav {
      background-color: #fff;
    }
  }

  > figure {
    margin-right: $product-card-margin;
    margin-right: calc(#{$product-card-margin} - 4px); // remove inline-block 4px space issue
    @include transition(.15s);
    vertical-align: top;
    white-space: normal;

    &:hover {
      .notification {
        @include transform(translate3D(0, .15rem, 0));
      }
    }

    .notification {
      @include transition(.25s);
    }
  }

  .nav {
    background: url('learn/slider-arrow.svg') no-repeat center $lightwarmgray;
    background-size: 35px;
    cursor: pointer;
    @include position(absolute, 0px 0 0px 0);
    @include transition(.05s);
    @include user-select(none);
    vertical-align: middle;
    width: $slide-button-width;
    z-index: 2;

    @include dashboard-small {
      display: none;
    }

    &:not(.disabled):hover {
      background-position: 55% center;
    }

    &:not(.disabled):active {
      background-position: 55% center;
      background-size: 33px;
    }

    &.disabled {
      background-image: none;
      cursor: default;
    }

    &.prev {
      left: 0;
      @include transform(rotate(180deg));
    }

    &.next {
      right: 0;
    }
  }
}

.vertical-slider {
  height: 405px;
  margin: 0 auto;
  overflow: hidden;
  padding: $product-card-margin/2 $slide-button-width - $product-card-margin/2 0;
  position: relative;
  @include product-card-widths(7, max-width, ($slide-button-width * 2));

  @include dashboard-small {
    padding: 0 $product-card-margin/2;
  }

  header h2 {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 2px;
    margin-bottom: $product-card-margin / 2;
    text-align: center;
    text-transform: uppercase;
  }

  &.screencasts, &.exercises {
    background-color: #fff;
    height: 300px;
    margin-bottom: $product-card-margin;
    margin-top: 0;
    padding-top: $product-card-margin;

    .nav.show-all {
      background: #fff;
    }
  }

  &.screencasts > figure {
    height: 200px;
  }

  &.exercises > figure {
    height: 300px;
  }

  &.exercises {
    background: #fff;
    margin-bottom: $product-card-margin;
  }

  &.reading {
    padding-top: 0;
  }

  &.revealed {
    height: auto;

    .nav.show-all:before {
      content: 'hide ';
    }
  }

  > figure {
    float: left;
    margin: 0 $product-card-margin/2 $product-card-margin;
    @include transition(.15s);
    vertical-align: top;
    white-space: normal;

    &:hover {
      .notification {
        @include transform(translateY(.15rem));
      }
    }

    .notification {
      @include transition(.25s);
    }
  }

  .nav.show-all {
    background: $lightwarmgray;
    color: $darkwarmgray;
    cursor: pointer;
    font-style: italic;
    height: $product-card-margin;
    line-height: $product-card-margin;
    margin: 0;
    @include position(absolute, 0 0px 0px 0);
    text-align: center;
    @include user-select(none);
    width: 100%;
    z-index: 4;

    &:before {
      content: 'show ';
    }
  }
}

.journey-bullet {
  background: $journey-line-color;
  border-radius: 100%;
  color: lighten($darkwarmgray, 10%);
  font-size: 2rem;
  font-weight: 700;
  height: $bullet-size;
  left: -8rem;
  line-height: $bullet-size;
  position: absolute;
  text-align: center;
  text-indent: .15em;
  top: 1rem;
  width: $bullet-size;
  z-index: -1;
}
