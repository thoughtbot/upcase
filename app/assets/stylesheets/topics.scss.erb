<% Topic.with_colors.each do |topic| %>
  body.topics.topics-show.<%= topic.slug.parameterize %> {
    .subject {
      background: <%= topic.color %>;
    }

    .subject h1 {
      color: <%= topic.color_accent %>;
    }

    .topic-image {
      background: url('<%= image_path "topics/#{topic.slug}.svg" %>') no-repeat;
    }
  }

  .tiles ul .tile.<%= topic.slug.parameterize %> {
    border-top-color: <%= topic.color %>;
  }

  .tiles-container .tile.<%= topic.slug.parameterize %> {
    border-top-color: <%= topic.color %>;
  }

  .trail-titles li.<%= topic.slug.parameterize %> {
    border-color: <%= topic.color %>;
  }

  .trail.<%= topic.slug.parameterize %> .topic-label {
    background: <%= topic.color %>;
    color: <%= topic.color_accent %>;
  }

  .trails-progress .complete {
    border-top: 10px solid <%= topic.color %>;
  }
<% end %>
