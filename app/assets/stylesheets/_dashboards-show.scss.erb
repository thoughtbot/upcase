body.dashboards-show {
  background: $base-background-2;

  p {
    font-size: $font-size-small;
    line-height: 1.6;
  }

  #header-wrapper {
    margin-bottom: $product-card-margin / 2;

    .back {
      display: none;
    }
  }

  > div.content {
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
  }

  .root-resources .content {
    padding: 20px 0 30px;
  }

  .root-resources figure {
    width: 100%;
    display: block;
    height: 50px;

    &:first-of-type h4 {
      color: $upcase-green;
    }

    &:nth-of-type(2) h4 {
      color: $gold-trail;
    }

    &:nth-of-type(3) h4 {
      color: $upcase-red;
    }
  }

  .root-resources h4 {
    display: inline-block;
    text-align: left;

    &:after {
      content: ' - ';
    }
  }

  .root-resources p {
    display: inline-block;
    text-align: left;
  }

  .root-trails, .root-library {
    .content {
      border: 1px solid $gray-4;
      border-radius: 3px;
      padding: 0;
    }
  }

  .root-trails .content {
    @include linear-gradient(white, #fafafa);
  }

  .root-trails .progress .numerical-progress {
    display: none;
  }

  .root-library {
    margin-top: 80px;
    padding-bottom: 0;
  }

  .product-headline {
    margin-left: 20px;
    margin-bottom: 30px;
    color: #6C6A66;
    font: 600 24px/30px $sans-serif;

    &.center {
      text-align: center;
    }
  }

  .video_tutorials.disabled {
    background: url(<%= asset_path 'stripe.png' %>) repeat rgba(0, 0, 0, .05);
    border-radius: .5rem;

    .disabled-text {
      margin: 1.5rem;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 700;
      line-height: 2rem;
    }

    a {
      color: $upcase-blue;
      font-family: $sans-serif;
      line-height: 1.8rem;
    }
  }
}
