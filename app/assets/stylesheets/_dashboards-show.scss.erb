body.dashboards-show {
  #header-wrapper .header-container {
    margin-bottom: $product-card-margin / 2;

    .back {
      display: none;
    }
  }

  .content > section {
    @include display(flex);
    @include flex-flow(wrap);
    @include justify-content(space-around);
    margin-bottom: 3.5rem;
  }

  .product-card {
    margin-bottom: 1.75rem;
    vertical-align: top;
  }

  .workshops.disabled {
    background: url(<%= asset_path 'stripe.png' %>) repeat rgba(0, 0, 0, .05);
    border-radius: .5rem;

    .disabled-text {
      margin: 1.5rem;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 700;
      line-height: 2rem;
    }

    a {
      color: $learndarkred;
      font-family: $sans-serif;
      line-height: 1.8rem;
    }
  }
}
