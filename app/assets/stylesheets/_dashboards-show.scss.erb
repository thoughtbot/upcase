body.dashboards-show {
  background: white;

  p {
    font-size: $font-size-small;
    line-height: 1.6;
  }

  #header-wrapper {
    margin-bottom: $product-card-margin / 2;

    .back {
      display: none;
    }
  }

  > div.content {
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
  }

  .root-trails, .root-library {
    .content {
      border: 1px solid $gray-4;
      border-radius: 3px;
      padding: 0;
    }
  }

  .welcome {
    .content {
      padding: 1em 0;
    }

    h1 {
      font-size: em(26);
      margin-bottom: 10px;
    }

    p {
      width: 80%;
    }
  }

  .root-trails .content {
    @include linear-gradient(#fafafa, white);
  }

  .root-trails .progress .numerical-progress {
    display: none;
  }

  .root-library {
    margin-top: 80px;
    padding-bottom: 0;

    .topic {
      display: block;
      padding: 2rem 1rem 3rem;

      header {
        float: left;
        margin: 0;
        padding: 0;
        width: auto;
      }

      .topic-headline {
        display: inline-block;
        font-size: em(20);
        font-family: $sans-serif;
        font-weight: 600;
        line-height: 1.2rem;
      }

      h4 {
        line-height: 1.1rem;
        margin: 0 20px 0 0;
      }

      p {
        line-height: 1.2rem;
        margin: 0;
      }

      .see-more {
        float: right;
      }

      h4, p {
        display: inline-block;
        text-align: left;
        vertical-align: bottom;
      }
    }
  }

  .product-headline {
    margin-left: 20px;
    margin-bottom: 30px;
    color: #6C6A66;
    font: 600 24px/30px $sans-serif;

    &.center {
      text-align: center;
    }
  }

  .video_tutorials.disabled {
    background: url(<%= asset_path 'stripe.png' %>) repeat rgba(0, 0, 0, .05);
    border-radius: .5rem;

    .disabled-text {
      margin: 1.5rem;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 700;
      line-height: 2rem;
    }

    a {
      color: $upcase-blue;
      font-family: $sans-serif;
      line-height: 1.8rem;
    }
  }
}
