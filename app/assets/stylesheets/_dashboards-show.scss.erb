body.dashboards-show {
  #header-wrapper .header-container {
    @include product-card-widths(5);
    margin-bottom: $product-card-margin / 2;

    .back {
      display: none;
    }
  }

  footer a {
    background: lighten($warmgray, 5%);;
    display: block;
    margin: auto;
    padding: 0 $slide-button-width - $product-card-margin/2;
    @include product-card-widths(7, max-width, ($slide-button-width * 2));

    @include dashboard-small {
      padding: 0 $product-card-margin/2;
    }

    span {
      color: $darkwarmgray;
      display: block;
      font: 700 1.5rem/1.3em $sans-serif;
      margin: 0 $product-card-margin/2;
      padding: 6rem 0;
      -webkit-font-smoothing: antialiased;
    }
  }
}

.vertical-slider.workshops .trails {
  background: url(<%= asset_path 'learn/trails-graphic.svg' %>) no-repeat 10px -4px;
  background-size: contain;
  display: inline-block;
  float: left;
  height: 330px;
  margin: 0 $product-card-margin/2 $product-card-margin;
  padding: 0;
  position: relative;
  vertical-align: top;
  white-space: normal;
  width: $product-card-width;

  a {
    display: block;
    margin-top: 1.45rem;
  }

  h3 {
    color: $darkwarmgray;
    font: 400 1.5rem/1.5em $sans-serif;
    padding-top: .6rem;
  }
}
