body.dashboards-show {
  #header-wrapper .header-container {
    @include product-card-widths(5);
    margin-bottom: $product-card-margin / 2;

    .back {
      display: none;
    }
  }

  .workshops.disabled {
    background: url(stripe.png) repeat rgba(0, 0, 0, .05);
    border-top: 1px solid rgba(0, 0, 0, .1);

    .disabled-text {
      margin: 0 1.5rem 1.5rem;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 700;
      line-height: 2rem;
    }

    a {
      color: $learndarkred;
      font-family: $sans-serif;
      line-height: 1.8rem;
    }
  }

  .vertical-slider.resources {
    padding-top: 0;
  }

  .vertical-slider.screencasts {
    margin-bottom: 0;
  }

  .vertical-slider.exercises {
    border-top: 1px solid #ccc;
    padding-top: 3rem;
  }
}
