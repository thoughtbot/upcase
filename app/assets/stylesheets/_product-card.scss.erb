.product-card {
  background: $base-background-2;
  border-bottom: 2px solid rgb(200, 200, 200);
  border-radius: .25rem;
  box-shadow: $base-box-shadow;
  border: 1px solid $base-border-color-1;;
  display: inline-block;
  height: 330px;
  padding: 5px;
  position: relative;
  width: $product-card-width;

  &.workshop:hover {
    .hover-text {
      @include transform(translate3D(0, 0, 0));
    }

    .hover-text + img, .hover-text + .inperson-date {
      @include transform(translate3D(110%, 0, 0));
    }
  }

  &.in-progress, &.registered, &.complete, {
    h5 {
      display: none;
    }
  }

  &.in-progress .status, &.registered .status {
    background: rgba(255, 255, 0, .4);
    color: $darkwarmgray;
    display: block;
  }

  &.complete .status {
    background: url(<%= asset_path 'check.svg' %>) no-repeat 5px 5px #83EBA8;
    background-size: 18px;
    color: darken(#83EBA8, 45%);
    display: block;
    text-indent: 18px;
  }

  &.thumbnail {
    background: none;
    border: 0;
    box-shadow: none;
    height: auto;
    padding: 0;

    &:hover figure span {
      opacity: 1;
      @include transform(scale(1));
    }

    &.group:after, &.group:before {
      background: #eee;
      border-radius: 3px;
      box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.17);
      content: '';
      display: block;
      height: 50px;
      @include position(absolute, -.4em 0 0 5%);
      width: 90%;
      z-index: 1;
    }

    &.group:before {
      left: 10%;
      top: -.75em;
      width: 80%;
    }

    &.group figure {
      box-shadow: 0 4px 8px rgba(0, 0, 0, .1), 0 -12px 0 -11px rgba(0, 0, 0, .17);
    }

    h5 {
      margin-bottom: .15rem;
    }

    h4 {
      color: $darkwarmgray;
      margin: 0;
      padding-bottom: 0;
      padding-top: 0;
    }

    figure {
      border-radius: 3px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, .1);
      line-height: 0;
      overflow: hidden;
      position: relative;
      z-index: 2;

      span {
        border-radius: 3px;
        box-shadow: inset 0 0 300px rgba(0, 0, 0, 1);
        color: #fff;
        font: 400 1rem/1.4em $serif;
        opacity: 0;
        padding: .8rem 1rem;
        @include position(absolute, 0px 0px 0px 0px);
        @include transform(scale(.95));
        @include transition(.1s);
        @include user-select(none);
        z-index: 1;
      }
    }

    &.exercise {
      figure {
        border: 1px solid darken($base-border-color-blue, 8%);
        box-shadow: $base-box-shadow;
      }
    }

    .console-illustration {
      background-color: #fff;
      background-image: image-url('exercise.svg');
      background-position: center;
      background-repeat: no-repeat;
      height: 124px;
      margin: 0;
      padding: .5rem 1rem;
      position: relative;

      &:after {
        border: 4px solid $base-border-color-blue;
        border-radius: 2px;
        bottom: 0;
        content: "";
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
      }
    }
  }

  &.book {
    border: 1px solid rgb(200, 200, 200);
    display: inline-block;
    height: auto;
    line-height: 0;
    padding: 0;
    position: relative;
    width: $product-card-width;
  }

  &.dashboard-resource {
    border-top: 5px solid $green;
    height: 165px;

    h4 {
      color: $darkwarmgray;
      padding-bottom: 0;

      img {
        float: right;
      }
    }

    p {
      margin-top: 0;
    }

    &.trails {
      background: url(<%= asset_path 'upcase/trails-graphic.svg' %>) $base-background-2 no-repeat 3rem .8rem;
      background-size: 75%;
    }
  }

  > a {
    display: block;
    height: 100%;
    line-height: 0;
    overflow: hidden;
    position: relative;
  }

  h4 {
    border-radius: 2px;
    color: #fff;
    margin-bottom: .3rem;
    padding: .75rem .6rem;
    font-weight: 700;
  }

  &.workshop h4 {
    background: $workshop-color;
  }

  &.mentor h4 {
    background: $learnred;
  }

  .hover-text {
    background: $base-background-2;
    color: #606060;
    display: block;
    font: 400 1rem/120px $serif;
    height: 120px;
    @include position(absolute, 0 0px 0 0px);
    text-align: center;
    text-transform: uppercase;
    @include transform(translate3D(-110%, 0, 0));
    @include transition(.3s $ease-out-quart);
  }

  img {
    @include transition(.3s $ease-out-quart);
  }

  h5, p {
    margin: .6rem;
  }

  h5 {
    color: rgb(175, 175, 175);
    font-size: .8rem;
    text-transform: uppercase;
  }

  .status {
    display: none;
    line-height: 1.2em;
    margin: .3rem 0;
    padding: .3rem .6rem;
  }

  .inperson-date {
    background: rgb(220, 220, 220);
    height: 120px;
    padding: 1.4rem .5rem;
    text-align: center;
    @include transition(.3s $ease-out-quart);

    section {
      margin: .25rem;
    }

    .upcoming {
      border-bottom: 2px solid #999;
      display: inline-block;
      margin-bottom: .4rem;
    }

    span {
      color: #606060;
      font-size: 1rem;
      font-weight: 400;
      line-height: 1.2em;
      text-align: left;
      text-transform: uppercase;
    }
  }

  .note {
    bottom: 0;
    font: normal .8rem/1em $sans-serif;
    position: absolute;
  }

  .product-card-locked {
    background: $journey-line-color;
    @include border-bottom-radius(0.25rem);
    margin-left: -5px;
    padding: 10px;
    width: calc(100% + 10px);

    .icon {
      float: left;
      margin-right: 7px;
      top: -2px;
    }

    h5 {
      color: $darkwarmgray;
      margin: 0;
    }
  }
}
